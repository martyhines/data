<h1>Listing thumbnails</h1>

<table>
  <tr>
    <th>Link</th>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @thumbnails.each do |thumbnail| %>
  <tr>
    <td><%= thumbnail.link %></td>
    <td><%= thumbnail.image %></td>
    <td><%= thumbnail.title %></td>
    <td><%= thumbnail.description.html_safe %></td>
    <td><%= thumbnail.order_by %></td>
    <td><%= link_to 'Show', thumbnail %></td>
    <td><%= link_to 'Edit', edit_thumbnail_path(thumbnail) %></td>
    <td><%= link_to 'Destroy', thumbnail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

